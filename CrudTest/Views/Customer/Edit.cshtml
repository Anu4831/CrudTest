@model CustomerAllDetailsViewModel

@{
    ViewData["Title"] = "Edit";

}
<div class="row" id="EditModal">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Update Customer</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly id="Id" />
                    <input type="hidden" asp-for="Id" id="Id"/>
                </div>

            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone No</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Province</label>
                <div class="col-sm-8">
                    <select id="Province" class="form-control" asp-for="ProvinceName">
                        <option value="">--Select Province--</option>
                       
                    </select>
                    <span asp-validation-for="ProvinceName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">District</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="DistrictName" id="District">
                        <option value="">--Select District--</option>

                    </select>
                    <span asp-validation-for="DistrictName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Municipality/VDC</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="MunName" id="Municipality">
                        <option value="">--Select Municipality--</option>

                    </select>
                    <span asp-validation-for="MunName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ward No</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="wardNo" />
                    <span asp-validation-for="wardNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                   <input type="button" value="Modify" onclick="SaveCustomerData(Id);" class=" btn btn-warning" id="btnSave" />
                    
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Customer" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script src="~/js/customer.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function () {
            var customerId = @Html.Raw(Json.Serialize(Model.Id)); // Serialize Id to JavaScript
            EditCustomerData(customerId);
        });
    </script>
}

